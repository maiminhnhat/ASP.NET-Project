@using (Html.BeginForm("Assign", "Topics"))
{
    @Html.HiddenFor(model => model.TopicID)
    @Html.DropDownList("Trainers")
    <input type="submit" value="Assign" class="btn btn-success" />
}

<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            Name
        </th>
        <th>
            Phone
        </th>
        <th>
            Email
        </th>
        <th>
            Type
        </th>
        <th>
            Education
        </th>
        <th>
            Department
        </th>
        <th>
            Account
        </th>
        <th>Function</th>
    </tr>

    @foreach (var item in ViewBag.TrainerTable)
    {
        <tr>
            <td>
                @item.TrainerID
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.Telephone
            </td>
            <td>
                @item.Email
            </td>
            <td>
                @item.Type
            </td>
            <td>
                @item.Education
            </td>
            <td>
                @item.Department
            </td>
            <td>
                @item.Account.Username
            </td>
            <td>
                @Html.ActionLink("Remove", "RemoveTrainer", new { trainers = item.TrainerID, topicID = Model.TopicID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }





</table>
